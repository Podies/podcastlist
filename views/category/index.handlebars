<a class="btn btn-success btn-default" href='/admin/category/add'>Add Category</a>
<br />
{{#if categories}}
  <h3>Category List</h3>
  <table class="table table-bordered">
    <tr> 
      <th>Id</th> 
      <th>Name</th> 
      <th>Icon</th>   
    </tr> 
    {{#each categories}}
      <tr>
       <td>{{_id}}</td> 
       <td>{{name}}</td>
       <td>{{icon}}</td> 
      </tr> 
    {{/each}}
  </table>
{{else}}
  <h4>No Categories Available. </h4>
{{/if}}